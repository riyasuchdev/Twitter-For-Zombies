<p>Account Settings</p>
<%= form_for @zombie, :as => :zombie, :url => password_reset_path, :method => :put do |f| %>
  <p>
    <%= @zombie.username %> has requested a password reset. Please enter your new password:
  </p>
  <p>
    <%= f.label 'new password:' %><br/>
    <%= f.password_field :new_password %>
    <%= show_field_error(@zombie, :new_password) %>
  </p>
  <p>
    <%= f.hidden_field :username %>
    <%= f.label 'password confirmation:' %><br/>
    <%= f.password_field :new_password_confirmation %>    
  </p>
  <p>
    <%= f.submit 'Update' %>
  </p>
<% end %>
