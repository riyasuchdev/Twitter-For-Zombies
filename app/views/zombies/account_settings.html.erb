<%= form_for @zombie, :as => :zombie, :url => account_settings_path(@zombie), :method=>:post do |f| %>
  <p>
    <%= f.label 'old password' %><br/>
    <%= f.password_field :password %>    
  </p>
  <p>
    <%= f.label 'new password' %><br/>
    <%= f.password_field :new_password %>    
  </p>
  <p>
    <%= f.label 'new_password confirmation' %><br/>
    <%= f.password_field :new_password_confirmation %>    
  </p>
  <p>
    <%= f.submit 'Update' %>&nbsp;&nbsp;&nbsp;
    <%= f.submit 'Clear Form', :type => 'reset' %>
  </p>
<% end %>
